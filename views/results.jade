						label(for='journal') Published in
						select.chzn(type='text', id='journal', data-placeholder='Select journal(s)', multiple)
							option PLOS Biology
							option Theory of Computing
							option Science and Technology of Advanced Materials
							option Computational Linguistics
							option BMJ
							option Anamesa
							option Culture Machine
							option European Political Economy Review
					span.filter
						label(for='title') Title contains
						input(type='text', id='title')
					span.filter
						label(for='abstract') Abstract contains
						input(type='text', id='abstract')
					span.filter
						label(for='author') Author name
						input(type='text', id='author')
					span.filter
						label(for='score').label-slider Peer Library score
						input(type='text', id='score', disabled)
						.clearfix
						#score-range
					span.filter	
						label(for='pub_date').label-slider Publication year
						input(type='text', id='pub-date', disabled)
						.clearfix
						#date-range

block misc
	script(type='text/javascript')
		$(document).ready(function() {
			$(".chzn").chosen();

			$('#score-range').slider({
				range: true,
				min: 0,
				max: 100,
				values: [ 0, 100 ],
				step: 10,
				slide: function( event, ui ) {
					$( "#score" ).val( ui.values[ 0 ] + " - " + ui.values[ 1 ] );
				}
			});
			$( "#score" ).val( $( "#score-range" ).slider( "values", 0 ) +
				" - " + $( "#score-range" ).slider( "values", 1 ) );

			$('#date-range').slider({
				range: true,
				min: 0,
				max: 100,
				values: [ 0, 100 ],
				step: 10,
				slide: function( event, ui ) {
					$( "#pub-date" ).val( ui.values[ 0 ] + " - " + ui.values[ 1 ] );
				}
			});
			$( "#pub-date" ).val( $( "#date-range" ).slider( "values", 0 ) +
				" - " + $( "#date-range" ).slider( "values", 1 ) );

			// adjust positioning of sidebar
			if($(window).width() < 1140){
				$('.search-tools').css({'position':'absolute'});
			};
			$(window).resize(function(){
				if($(window).width() < 1140){
					$('.search-tools').css({'position':'absolute'});
				} else {
					$('.search-tools').css({'position':'fixed'});
				};
			});
		});